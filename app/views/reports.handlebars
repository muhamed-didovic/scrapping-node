<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">Reports</div>
        <div class="panel-body">
          <form class="form-horizontal" role="form" method="POST" action="reports">

            <div class="form-group">
              <label for="from" class="col-md-4 control-label">From</label>

              <div class="col-md-6">
                <input id="from" type="date" class="form-control" name="from" value="" autofocus>
              </div>
            </div>

            <div class="form-group">
              <label for="to" class="col-md-4 control-label">To:</label>

              <div class="col-md-6">
                <input id="to" type="date" class="form-control" name="to">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-8 col-md-offset-4">
                <button type="submit" class="btn btn-primary send-button">
                  Send
                </button>

              </div>
            </div>
            <p class="text-danger text-center">{{ message }}</p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
